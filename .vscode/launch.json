  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Current File",
      "type": "Ruby",
      "request": "launch",
      "program": "${file}",
      "cwd": "${workspaceRoot}",
      "args": [
        "-I",
        "lib"
      ]
    },
    {
      "name": "Listen for rdebug-ide",
      "type": "Ruby",
      "request": "attach",
      "remoteHost": "127.0.0.1",
      "remotePort": "8808",
      "remoteWorkspaceRoot": "${workspaceRoot}"
    },
    {
      "name": "Debug Local File",
      "type": "Ruby",
      "request": "launch",
      "program": "${workspaceRoot}/exe/faa_login",
      "cwd": "${workspaceRoot}",
      "args": [
        "-I",
        "lib"
      ]
    }
  ]
}